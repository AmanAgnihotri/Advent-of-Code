root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 80
insert_final_newline = true
trim_trailing_whitespace = true

[*.cs]
ij_any_align_multiline_parameters = true
ij_any_align_multiline_extends_list = true

[*.sln]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
